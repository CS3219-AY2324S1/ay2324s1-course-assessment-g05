{
  "name": "peerprep",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev | pino-pretty",
    "dev:frontend": "npm run dev | pino-pretty",
    "dev:user-service": "cd ../backend/user-service && npm run dev",
    "dev:question-service": "cd ../backend/question-service && npm run dev",
    "dev:collaboration-service": "cd ../backend/collaboration-service && npm run dev",
    "dev:matching-service": "cd ../backend/matching-service && npm run dev",
    "dev-all": "concurrently \"npm run dev:frontend\" \"npm run dev:user-service\" \"npm run dev:question-service\" \"npm run dev:matching-service\" \"npm run dev:collaboration-service\"",
    "setup:frontend": "npm i",
    "setup:user-service": "cd ../backend/user-service && npm i",
    "setup:question-service": "cd ../backend/question-service && npm i",
    "setup:collaboration-service": "cd ../backend/collaboration-service && npm i",
    "setup:matching-service": "cd ../backend/matching-service && npm i",
    "setup-all": "concurrently \"npm run setup:frontend\" \"npm run setup:user-service\" \"npm run setup:question-service\" \"npm run setup:matching-service\" \"npm run setup:collaboration-service\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "checkstyle": "prettier . --check",
    "pretty": "prettier . --write"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.5.2",
    "@nextui-org/react": "^2.1.10",
    "@types/bcrypt": "^5.0.0",
    "@types/node": "20.5.7",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.15",
    "aws-sdk": "^2.1465.0",
    "bcryptjs-react": "^2.4.6",
    "d3": "^7.8.5",
    "eslint": "8.48.0",
    "eslint-config-next": "13.4.19",
    "framer-motion": "^10.16.4",
    "fs": "^0.0.1-security",
    "html-react-parser": "^4.2.2",
    "monaco-editor": "^0.43.0",
    "next": "^13.5.2",
    "pino": "^8.15.0",
    "postcss": "8.4.29",
    "quill-image-compress": "^1.2.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-quill": "^2.0.0",
    "socket.io-client": "^4.7.2",
    "react-split": "^2.0.14",
    "react-toastify": "^9.1.3",
    "swr": "^2.2.2",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/d3": "^7.4.0",
    "@types/uuid": "^9.0.4",
    "concurrently": "^8.2.1",
    "eslint-config-prettier": "^9.0.0",
    "pino-pretty": "^10.2.0",
    "prettier": "3.0.3"
  }
}
